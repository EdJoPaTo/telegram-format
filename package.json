{
	"name": "telegram-format",
	"version": "2.0.0",
	"description": "Format Telegram message texts with Markdown or HTML",
	"license": "MIT",
	"repository": "EdJoPaTo/telegram-format",
	"author": {
		"name": "EdJoPaTo",
		"email": "EdJoPaTo@gmail.com",
		"url": "https://edjopato.de"
	},
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build": "del dist && tsc",
		"prepack": "npm run build",
		"test": "tsc && xo && nyc ava"
	},
	"main": "dist/source",
	"types": "dist/source",
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"keywords": [
		"telegram",
		"format",
		"html",
		"markdown"
	],
	"dependencies": {},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.7.0",
		"@types/node": "^13.1.4",
		"ava": "^3.5.0",
		"del-cli": "^3.0.0",
		"nyc": "^15.0.0",
		"typescript": "^3.7.4",
		"xo": "^0.27.2"
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"dist/source",
			"source"
		],
		"exclude": [
			"**/*.test.ts"
		],
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"extends": "xo-typescript",
		"extensions": [
			"ts"
		],
		"semicolon": false,
		"rules": {
			"ava/no-ignored-test-files": "off",
			"@typescript-eslint/camelcase": "off",
			"@typescript-eslint/semi": [
				"error",
				"never"
			]
		}
	}
}
