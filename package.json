{
	"name": "telegram-format",
	"version": "1.0.0",
	"description": "Format Telegram message texts with Markdown or HTML",
	"license": "MIT",
	"repository": "EdJoPaTo/telegram-format",
	"author": {
		"name": "EdJoPaTo",
		"email": "EdJoPaTo@gmail.com",
		"url": "https://edjopato.de"
	},
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"build": "del dist && tsc",
		"prepack": "npm run build",
		"test": "xo && nyc ava"
	},
	"main": "dist",
	"types": "dist",
	"files": [
		"dist",
		"!*.test.*"
	],
	"keywords": [
		"telegram",
		"format",
		"html",
		"markdown"
	],
	"dependencies": {},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.4.0",
		"@types/node": "^12.0.2",
		"@typescript-eslint/eslint-plugin": "^1.11.0",
		"@typescript-eslint/parser": "^1.11.0",
		"ava": "^2.1.0",
		"del-cli": "^2.0.0",
		"eslint-config-xo-typescript": "^0.15.0",
		"nyc": "^14.1.1",
		"ts-node": "^8.0.2",
		"typescript": "^3.3.3",
		"xo": "^0.24.0"
	},
	"ava": {
		"babel": false,
		"compileEnhancements": false,
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register"
		]
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"source"
		],
		"exclude": [
			"**/*.test.ts"
		],
		"all": true,
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"extends": "xo-typescript",
		"extensions": [
			"ts"
		],
		"semicolon": false,
		"rules": {
			"ava/no-ignored-test-files": "off",
			"@typescript-eslint/camelcase": "off",
			"@typescript-eslint/semi": [
				"error",
				"never"
			]
		}
	}
}
